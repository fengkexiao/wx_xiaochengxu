@import "../../common/common.wxss";
@import "./patientInfo.skeleton.wxss";
.page {
  height: 100%;
  width: 100%;
}

.info-header {
  height: 190rpx;
  display: flex;
  background: #fff;
  align-items: center;
  padding-left: 32rpx;
}

.header-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 2rpx solid #dbdfe8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-desc {
  display: flex;
  flex-direction: column;
  padding-left: 36rpx;
}

.desc-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #000000;
}

.desc-phone {
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
  margin-top: 16rpx;
}

.header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
}

.info-title {
  height: 96rpx;
  line-height: 96rpx;
  background: #F6F6F6;
  padding-left: 32rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #000000;
}

.info-container {
  background: #fff;
  padding: 32rpx 32rpx 16rpx 32rpx;
}

.info-item {
  margin-bottom: 16rpx;
  color: #5E5E5E;
  font-size: 28rpx;
  display: flex;
}

.info-item__special {
  margin-bottom: 16rpx;
  color: #5E5E5E;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.item-title {
  flex-shrink: 0;
}