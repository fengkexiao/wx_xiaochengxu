.prescribe {
  background: #f6f6f6;
  height: calc(100% - 142rpx);
  padding-top: 22rpx;
}
.prescribeContent {
  background: #ffffff;
  padding: 0rpx 32rpx 16rpx;
}
.prescribeContent .item {
  padding: 32rpx 0rpx 16rpx;
  border-bottom: 1rpx solid #eeeeee;
  margin-bottom: 16rpx;
}
.prescribeContent .item .title {
  font-weight: 600;
  text-align: left;
  color: rgba(0,0,0,0.85);
  line-height: 48rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.prescribeContent .item .content {
  overflow: hidden;
}
.prescribeContent .item .content>text {
  width: 50%;
  display: inline-block;
  margin-bottom: 18rpx;
  font-weight: 500;
  float: left;
  color: #2a2c30;
  line-height: 44rpx;
  font-size: 28rpx;
}
.prescribeContent .item .content input {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #2a2c30;
  padding-left: 10rpx;
  position: relative;
}
.prescribeContent .item .content input::before {
  content: "";
  width: 2rpx;
  height: 30rpx;
  background: #035fdf;
  display: block;
  position: absolute;
  top: 8rpx;
  left: 0rpx;
}
.prescribeContent .nextStep {
  background: #ffffff;
  padding: 24rpx 30rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: calc(100% - 60rpx);
}
.prescribeContent .nextStep text {
  height: 80rpx;
  background: linear-gradient(270deg,#5db2ff 100%, #2e80fd 0%);
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 4rpx 0rpx rgba(0,0,0,0.1); 
  display: block;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
}
.ellipsis {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.abnormal {
  color: #fe5853 !important;
}