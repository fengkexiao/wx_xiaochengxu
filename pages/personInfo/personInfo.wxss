@import "../../common/common.wxss";

.page {
  height: 100%;
  width: 100%;
}


.info-header {
  height: 190rpx;
  display: flex;
  background: #fff;
  align-items: center;
  padding-left: 32rpx;
}

.header-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 2rpx solid #dbdfe8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-desc {
  display: flex;
  flex-direction: column;
  padding-left: 36rpx;
}

.desc-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #000000;
}

.desc-phone {
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
  margin-top: 16rpx;
}

.header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
}

.address {
  margin-top: 20rpx;
  background-color: white;
}

.cell {
  padding: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-title {
  width: 112rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.cell-detail {
  margin-left: 66rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
  flex-grow: 1;
}

.cell-right {
  text-align: right;
}

.address-selected-details {
  margin-left: 62rpx;
}

.address-seleceted image {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.address-seleceted {
  margin-right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
}

.cell-separator {
  margin-left: 32rpx;
  height: 2rpx;
  background: rgba(238, 238, 238, 1);
}

.delete {
  margin-top: 32rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(254, 88, 83, 1);
  line-height: 28rpx;
  text-align: center;
}

.address-detail {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
  padding: 36rpx;
  background-color: white;
}

.btnView {
  position: absolute;
  width: 100%;
  bottom: 36rpx;
}

picker {
  width: 100%
}

.bottom {
  width: 750rpx;
  height: 154rpx;
  background: #ffffff;
  box-shadow: 0px 0px 4rpx 0px rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-btn {
  width: 686rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2e80fd;
  border-radius: 50rpx;
  box-shadow: 0px 0px 4rpx 0px rgba(0, 0, 0, 0.1);
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
}