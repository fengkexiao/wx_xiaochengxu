.patientManage {
  min-height: calc(100vh - 60px);
  width: 100vw;
  background: #ffffff;
}

.patientManage .search {
  padding: 8rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.patientManage .search .searchInput {
  height: 72rpx;
  background: #f6f6f6;
  border: 1rpx solid #eeeeee;
  border-radius: 40rpx;
  line-height: 72rpx;
  padding-left: 86rpx;
  padding-right: 40rpx;
  width: calc(100% - 128rpx);
  color: #000000;
  float: left;
  font-size: 28rpx;
}

.focus {
  width: calc(100% - 220rpx) !important;
}

.patientManage .search image {
  position: absolute;
  top: 28rpx;
  left: 64rpx;
  height: 32rpx;
  width: 32rpx;
}

.patientManage .search text {
  color: #035FDF;
  font-size: 28rpx;
  float: right;
  line-height: 40rpx;
  padding-top: 16rpx;
}

.patientManage .tabItem {
  margin-top: 24rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #eeeeee;
}

.patientManage .tabItem .item {
  width: 25%;
  text-align: center;
  float: left;
  margin-bottom: 24rpx;
}

.patientManage .tabItem .item .name {
  text-align: left;
  color: rgba(0, 0, 0, 0.85);
  line-height: 40rpx;
  font-size: 28rpx;
}

.patientManage .tabItem .item .bottom {
  width: 64rpx;
  height: 4rpx;
  background: #ffffff;
  border-radius: 2rpx;
  display: block;
  position: relative;
  left: calc(50% - 32rpx);
}

.patientManage .tabItem .active .name {
  color: #387FE2;
  font-weight: 600;
}

.patientManage .tabItem .active .bottom {
  width: 64rpx;
  height: 4rpx;
  background: #387fe2;
  border-radius: 2rpx;
  box-shadow: 0rpx 6rpx 8rpx 0rpx rgba(0, 0, 0, 0.02);
  display: block;
  position: relative;
  left: calc(50% - 32rpx);
}

.patientManage .userList {
  margin-top: 32rpx;
}

.patientManage .userList .item {
  padding-left: 32rpx;
  display: flex;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
}

.patientManage .userList .item .headImg {
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.patientManage .userList .item .right {
  border-bottom: 1rpx solid #eeeeee;
  overflow: hidden;
  width: calc(100% - 104rpx);
  height: 56rpx;
  padding-bottom: 16rpx;
  padding-top: 24rpx;
}

.patientManage .userList .item .right text {
  text-align: left;
  color: #000000;
  line-height: 32rpx;
  font-size: 28rpx;
  float: left;
}

.patientManage .userList .item .right image {
  height: 24rpx;
  width: 24rpx;
  float: left;
  margin-left: 16rpx;
  padding-top: 5rpx;
}

.nodata {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.nodata-img {
  width: 486rpx;
  height: 390rpx;
}

.nodata-text {
  font-size: 32rpx;
  font-weight: 600;
  color:  rgba(0,0,0,0.85);
  margin-top:174rpx;
}