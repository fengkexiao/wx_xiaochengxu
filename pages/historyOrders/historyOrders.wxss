@import "../../common/common.wxss";

.page {
  height: 100%;
  width: 100%;
}

.list-header {
  display: flex;
  height: 90rpx;
  align-items: center;
  background: #fff;
  justify-content: space-between;
  padding: 0 32rpx;
}

.item-text {
  font-size: 28rpx;
  color: #000000;
}

.item-text__active {
  font-weight: 800;
}

.item-line {
  margin-top: 16rpx;
  height: 2px;
}

.item-line__active {
  height: 2px;
  background: #438bef;
  border-radius: 2px;
  margin-top: 16rpx;
}

.list-container {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.order-item {
  width: 702rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin: 26rpx 32rpx 32rpx 32rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  padding: 26rpx 0rpx 26rpx 0rpx;
  margin: 0 32rpx 0 32rpx;
  border-bottom: 2rpx solid #eeeeee;
}

.header-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 60rpx;
}

.header-left {
  font-size: 24rpx;
  font-weight: 800;
  color: #000000;
  display: flex;
  justify-content: center;
}


.header-text {
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
  margin-left: 16rpx;
}

.header-right {
  font-size: 24rpx;
  font-weight: 400;
  color: #595959;
}

.medicine-list {
  margin: 0rpx 32rpx 16rpx 32rpx;
}

.medicine-item {
  margin-top: 24rpx;
}

.medicine-name {
  font-size: 28rpx;
  font-weight: 800;
  color: #333333;
}

.medicine-desc {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  color: #595959;

}

.price-container {
  font-size: 24rpx;
  padding-bottom: 16rpx;
  font-weight: 400;
  text-align: right;
  margin-right: 32rpx;
  color: #666666;
  border-bottom: 2rpx solid #eeeeee;
}

.price-mount {
  font-size: 28rpx;
  font-weight: 800;
  color: #fe5853;
}

.desc-item {
  margin: 16rpx 32rpx 16rpx 32rpx;
}

.doctor-name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
}

.doctor-time {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 32rpx;
  text-align: left;
  color: rgba(0, 0, 0, 0.65);
}

.doctor-express {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.order-btn__container {
  text-align: right;
  display: flex;
  justify-content: flex-end;
  margin:0 32rpx 32rpx 0;
}

.order-btn {
  width: 176rpx;
  height: 64rpx;
  border: 2rpx solid #387fe2;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 64rpx;
  text-align: center;
  color: #387fe2;
}


.nodata {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.nodata-img {
  width: 486rpx;
  height: 290rpx;
}

.nodata-text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0,0,0,0.85);
  margin-top:112rpx;
  line-height: 48rpx;
}